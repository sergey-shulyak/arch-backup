#!/bin/bash
# Hyprshot wrapper for Hyprland screenshots
# Saves to Pictures/Screenshots and uses mako for notifications

# Set screenshot directory
export HYPRSHOT_DIR="$HOME/Pictures/Screenshots"
mkdir -p "$HYPRSHOT_DIR"

# Determine screenshot mode
MODE="output"  # Default: full screenshot
if [ "$1" = "region" ]; then
    MODE="region"
elif [ "$1" = "window" ]; then
    MODE="window"
fi

# Take screenshot and show notification
if hyprshot -m "$MODE" -o "$HYPRSHOT_DIR" 2>/dev/null; then
    notify-send -u normal "Screenshot" "ğŸ“¸ Screenshot saved to Pictures/Screenshots" --app-name="Hyprshot"
else
    notify-send -u critical "Screenshot" "âŒ Failed to take screenshot" --app-name="Hyprshot"
    exit 1
fi
