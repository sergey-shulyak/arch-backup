{
  "layer": "top",
  "position": "top",
  "height": 54,
  "spacing": 10,
  "reload_style_on_change": true,

  "modules-left": ["custom/arch-menu","hyprland/workspaces","group/hardware"],
  "modules-center": ["clock"],
  "modules-right": ["tray","hyprland/language","keyboard-state","group/audio","network","backlight","battery"],


  "custom/arch-menu": {
    "format": "Û∞£á",
    "tooltip-format": "System Menu",
    "on-click": "~/.local/bin/system-menu --location top_left"
  },

  "hyprland/workspaces": {
    "format": "{id} {icon}",
    "format-icons": {
      "1": "üë•",
      "2": "üåê",
      "3": "üîß",
      "4": "‚å®Ô∏è",
      "5": "üéµ",
      "6": "üé¨",
      "7": "üéÆ",
      "default": "‚ú®"
    },
    "persistent-workspaces": {
      "1": [],
      "2": [],
      "3": [],
      "4": [],
    }
  },

  "clock": {
    "format": "{:%a, %b %d, %H:%M}",
    //"format-alt": "üìÖ {:%a, %b %d, %Y}",
    "interval": 1,
    "tooltip-format": "<tt><small>{calendar}</small></tt>",
    "calendar": {
      "mode": "month",
      "mode-mon-col": 3,
      "weeks-pos": "right",
      "on-scroll": 1,
      "on-click-right": "mode"
    },
    "actions": {
      "on-scroll-up": "shift_up",
      "on-scroll-down": "shift_down",
      "on-click-right": "mode",
    },
    "on-click": "kitty calcure & kitty -e fish -c 'wego; echo \"Press Enter to exit\"; read' & kitty newsboat"
  },

  "hyprland/language": {
    "format": "{}",
    "format-en": "üá∫üá∏",
    "format-uk": "üá∫üá¶",
    "format-ru": "üê∑",
    "tooltip": true,
    "on-click": "hyprctl switchxkblayout 'at-translated-set-2-keyboard' next"
  },

  "cpu": {
    "format": "Û∞òö {usage}%",
    "tooltip": true,
    "interval": 1,
    "on-click": "kitty btop"
  },

  "memory": {
    "format": "Û∞çõ {percentage}%",
    "tooltip": true,
    "interval": 1,
    "tooltip-format": "Used: {used:0.1f}G\nTotal: {total:0.1f}G",
    "on-click": "kitty btop"
  },

  "temperature": {
    "hwmon-path": "/sys/class/hwmon/hwmon3/temp1_input",
    "format": "Û∞∏Å {temperatureC}¬∞C",
    "critical-threshold": 90,
    "interval": 1,
    "on-click": "kitty btop"
  },

  "group/hardware": {
    "orientation": "horizontal",
    "modules": [
      "temperature",
      "custom/gpu-temp",
      "cpu",
      "memory",
      "disk"
    ],
    "drawer": {
      "transition-duration": 300,
      "transition-left-to-right": true
    }
  },

  "group/audio": {
    "orientation": "inherit",
    "modules": [
      "pulseaudio",
      "bluetooth"
    ]
  },

  "disk": {
    "interval": 30,
    "format": "Û∞ãä {percentage_used}%",
    "tooltip-format": "Used: {used} / {total}\n{path}",
    "path": "/"
  },

  "custom/gpu-temp": {
    "exec": "~/.config/waybar/scripts/gpu-temp.sh",
    "format": "Û∞¢Æ {0}¬∞C",
    "interval": 1,
    "on-click": "kitty nvtop",
    "tooltip-format": "GPU Temperature"
  },

  "pulseaudio": {
    "format": "Û∞ïæ {volume}%",
    "format-muted": "Û∞ñÅ Muted",
    "scroll-step": 5,
    "on-click": "kitty pulsemixer"
  },

  "bluetooth": {
    "format": "Û∞Ç≤ Off",
    "format-on": "Û∞ÇØ On",
    "format-connected": "Û∞ÇØ {device_alias}",
    "tooltip-format": "Bluetooth Off",
    "tooltip-format-on": "Bluetooth On",
    "tooltip-format-connected": "{device_alias}\nConnected",
    "on-click": "kitty bluetuith"
  },

  "backlight": {
    "format": "Û±éñ {percent}%",
    "interval": 1,
    "on-scroll-up": "brightnessctl s +5%",
    "on-scroll-down": "brightnessctl s 5%-"
  },

  "custom/network-speed": {
    "exec": "~/.config/waybar/scripts/network-speed.sh",
    "interval": 1
  },

  "custom/tlp-profile": {
    "exec": "~/.config/waybar/scripts/tlp-profile.sh",
    "interval": 2,
    "format": "Û∞ìÖ {}",
    "tooltip-format": "TLP Profile\nClick to switch",
    "on-click": "~/.config/waybar/scripts/tlp-switcher.sh"
  },


  "network": {
    "format": "{icon} {essid}",
    "format-ethernet": "{icon} Wire",
    "format-disconnected": "{icon} Offline",
    "format-disabled": "Û±ö¶ Disabled",
    "format-alt": "‚Üì {bandwidthDown} | ‚Üë {bandwidthUp}",
    "format-alt-click": "click-right",
    "format-icons": {
      "wifi": "Û∞§®",
      "ethernet": "Û∞åö",
      "disconnected": "Û±ö¶"
    },
    "tooltip-format": "{ifname}\nIP: {ipaddr}\nSignal: {signalStrength}%\nFreq: {frequency}",
    "interval": 1,
    "on-click": "kitty nmtui"
  },

  "battery": {
    "states": {
      "good": 80,
      "warning": 30,
      "critical": 10
    },
    "format": "Û∞Åπ {capacity}%",
    "format-charging": "Û∞ÇÑ {capacity}%",
    "format-plugged": "Û∞ÇÖ {capacity}%",
    "format-alt": "Û∞Åπ {time} | {power}W",
    "tooltip-format": "{timeTo} - {power}W",
    "interval": 1,
    "format-alt-click": "click",
    "on-click-right": "bash ~/.config/waybar/scripts/tlp-switcher.sh"
  },

  "tray": {
    "icon-size": 20,
    "spacing": 10,
    "show-passive-items": true,
    "expand": true
  }
}
