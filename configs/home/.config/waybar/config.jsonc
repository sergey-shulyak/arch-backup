{
  "layer": "top",
  "position": "top",
  "height": 48,
  "spacing": 8,

  "modules-left": ["hyprland/workspaces"],
  "modules-center": ["clock"],
  "modules-right": ["hyprland/language", "cpu", "memory", "temperature", "pulseaudio", "backlight", "network", "battery"],

  "hyprland/workspaces": {
    "format": "{id}",
    "persistent-workspaces": {
      "1": [],
      "2": [],
      "3": [],
      "4": [],
    }
  },

  "clock": {
    "format": "{:%a, %b %d, %H:%M}",
    //"format-alt": "ğŸ“… {:%a, %b %d, %Y}",
    "interval": 1,
    "tooltip-format": "<tt><small>{calendar}</small></tt>",
    "calendar": {
      "mode": "month",
      "mode-mon-col": 3,
      "weeks-pos": "right",
      "on-scroll": 1,
      "on-click-right": "mode"
    },
    "actions": {
      "on-scroll-up": "shift_up",
      "on-scroll-down": "shift_down",
      "on-click-right": "mode",
    },
    "on-click": "kitty calcure"
  },

  "hyprland/language": {
    "format": "{}",
    "format-en": "ğŸ‡ºğŸ‡¸",
    "format-uk": "ğŸ‡ºğŸ‡¦",
    "format-ru": "ğŸ·",
    "tooltip": true,
    "on-click": "hyprctl switchxkblayout 'at-translated-set-2-keyboard' next"
  },

  "cpu": {
    "format": "ğŸ«€ {usage}%",
    "tooltip": true,
    "interval": 1,
    "on-click": "kitty btop"
  },

  "memory": {
    "format": "ğŸ§  {percentage}%",
    "tooltip": true,
    "interval": 1,
    "tooltip-format": "Used: {used:0.1f}G\nTotal: {total:0.1f}G",
    "on-click": "kitty btop"
  },

  "temperature": {
    "thermal-zone": 0,
    "critical-threshold": 80,
    "format-critical": "ğŸ”¥ {temperatureC}Â°C",
    "format": "ğŸŒ¡ï¸ {temperatureC}Â°C",
    "interval": 1,
    "on-click": "kitty btop"
  },

  "pulseaudio": {
    "format": "ğŸ”Š {volume}%",
    "format-muted": "ğŸ”‡ Muted",
    "scroll-step": 5,
    "on-click": "pavucontrol"
  },

  "backlight": {
    "format": "â˜€ï¸ {percent}%",
    "interval": 1,
    "on-scroll-up": "brightnessctl s +5%",
    "on-scroll-down": "brightnessctl s 5%-"
  },

  "network": {
    "format": "{icon} {essid} ({signalStrength}%)",
    "format-alt": "{icon} {ipaddr}",
    "format-alt-click": "click-right",
    "format-icons": {
      "wifi": "ğŸ›œ",
      "ethernet": "ğŸ”—",
      "disconnected": "ğŸ¦–"
    },
    "tooltip-format": "{ifname}: {ipaddr}\nStrength: {signalStrength}%",
    "on-click": "kitty nmtui"
  },

  "battery": {
    "states": {
      "good": 80,
      "warning": 30,
      "critical": 15
    },
    "format": "ğŸ”‹ {capacity}%",
    "format-charging": "âš¡ {capacity}%",
    "format-plugged": "ğŸ”Œ {capacity}%",
    "format-alt": "{time}",
    "tooltip-format": "{timeTo} - {power}W",
    "interval": 1
  }
}
