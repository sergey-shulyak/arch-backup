{
  "layer": "top",
  "position": "top",
  "height": 36,
  "spacing": 8,

  "modules-left": ["custom/arch-menu","hyprland/workspaces","cpu","memory","custom/cpu-temp","custom/gpu-temp","custom/network-speed"],
  "modules-center": ["clock"],
  "modules-right": ["tray","hyprland/language","pulseaudio","bluetooth","network","backlight","battery"],

  "custom/arch-menu": {
    "format": "ó°£‡",
