[Unit]
Description=Clipboard History - wl-paste integration
Documentation=https://github.com/sentriz/cliphist
PartOf=graphical-session.target
After=graphical-session.target

[Service]
Type=simple
ExecStart=/bin/sh -c 'wl-paste --type text --watch cliphist store & wl-paste --type image --watch cliphist store & wait'
Restart=on-failure
RestartSec=3

[Install]
WantedBy=graphical-session.target
