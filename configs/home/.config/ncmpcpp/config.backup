# ncmpcpp configuration file

# Connection settings
mpd_host = "127.0.0.1"
mpd_port = "6600"
mpd_music_dir = "~/Music"

# Display settings
ncmpcpp_directory = "~/.config/ncmpcpp"
lyrics_directory = "~/.config/ncmpcpp/lyrics"

# Visualizer settings
visualizer_data_source = "/tmp/mpd.fifo"
visualizer_output_name = "my_fifo"
visualizer_in_stereo = "yes"
visualizer_type = "spectrum"
visualizer_look = "◆▋"
visualizer_color = "blue, cyan, green, yellow, magenta, red"

# Playlist settings
song_list_format = "{%a - }{%t}|{%f}"
song_status_format = "$b{%a - }{%t}$b {(%l)}"
song_library_format = "{%n - }{%t}|{%f}"
alternative_header_first_line_format = "$b$1{%t}$1$/b"
alternative_header_second_line_format = "$b{%a - }{%b}$b {(%y)}"

# Colors (Catppuccin Mocha)
color1 = "white"
color2 = "blue"

# UI Layout
user_interface = "alternative"
header_visibility = "yes"
statusbar_visibility = "yes"
titles_visibility = "yes"

# Layout - displays current track, progress, playlist and visualizer
playlist_display_mode = "classic"
browser_display_mode = "classic"

# Current track and progress display
progressbar_look = "━━━"

# Behavior
follow_now_playing_lyrics = "yes"
store_lyrics_in_song_dir = "no"

# Startup screen
startup_screen = "media_library"

# Now playing
show_hidden_files_in_local_browser = "no"
display_volume_level = "yes"
display_bitrate = "yes"
display_remaining_time = "yes"

# Navigation
cyclic_scrolling = "no"
lines_scrolled = "2"

# Mouse support
mouse_support = "yes"

# Screen layout configuration
# This creates a layout with current track, progress, playlist, and visualizer
playlist_shorten_total_times = "yes"
playlist_show_remaining_time = "yes"

# Window layout
media_library_primary_tag = "artist"
media_library_albums_split_by_date = "yes"

